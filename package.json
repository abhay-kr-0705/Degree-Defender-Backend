{
  "name": "degree-defenders-backend",
  "version": "1.0.0",
  "description": "Authenticity Validator for Academia - Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "npx prisma migrate deploy",
    "db:seed": "node prisma/seed.js",
    "db:reset": "npx prisma migrate reset --force",
    "db:studio": "npx prisma studio",
    "db:check": "node scripts/migrate-db.js",
    "db:deploy": "node scripts/deploy-schema.js",
    "postinstall": "npx prisma generate"
  },
  "keywords": [
    "certificate-validation",
    "blockchain",
    "ocr",
    "education",
    "government"
  ],
  "author": "Government of Jharkhand - Department of Higher and Technical Education",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "tesseract.js": "^5.0.4",
    "pdf-parse": "^1.1.1",
    "crypto": "^1.0.1",
    "web3": "^4.3.0",
    "ethers": "^6.9.0",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
